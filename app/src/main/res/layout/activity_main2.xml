<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:gravity="center"
                android:text="Bike Location"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvspacea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:gravity="center"
                android:text=""
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:gravity="center"
                android:text="Bike Location Details"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1aa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvspaceb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:gravity="center"
                android:text=""
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivAvailableBikes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/bike"/>

            <TextView
                android:id="@+id/availableBikes"
                android:layout_width="50dp"
                android:padding="8dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/temp"
                android:gravity="center_horizontal"
                android:text=""></TextView>
            <ImageView
                android:id="@+id/ivBikeStands"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/p"/>

            <TextView
                android:id="@+id/bikeStands"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text=""
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                android:textStyle="bold"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1ab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvspace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:gravity="center"
                android:text=""
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:layout_span="2"
                android:text="Address: "
                android:textSize="18sp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:text=""
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/bikeaddress"
                android:layout_span="2"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="18sp"></TextView>


        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textOpenStatus"
                android:layout_span="2"
                android:text="Open Status"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:text=""
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/bikeOpenStatus"
                android:layout_span="2"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="18sp"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textPaymentTerminal"
                android:layout_span="2"
                android:text="Payment Terminal"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="50dp"
                android:text=""
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/bikePaymentTerminal"
                android:layout_span="2"
                android:gravity="center_horizontal"
                android:text=""
                android:textSize="18sp"></TextView>

        </TableRow>
        <TableRow
            android:id="@+id/tableRowEndSpace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvSpaceEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="5"
                android:gravity="center"
                android:text=""
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif"></TextView>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="302dp"
                android:layout_height="250dp"
                android:layout_span="5"
                android:paddingTop="10dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/dublinbikes"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="109dp" />
        </TableRow>
    </TableLayout>



</android.support.constraint.ConstraintLayout>